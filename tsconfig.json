{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "outDir": "dist",
        "sourceMap": true,
        "typeRoots": [
            "./node_modules/@types"
        ],
        "types": [
            "node"
        ]
    },
    "include": [
        "server/**/*.ts",
        "server/*.ts"
    ],
    "exclude": [
        "./node_modules",
        "./node_modules/@types"
    ],
    "compileOnSave": true
}